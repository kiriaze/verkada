		<meta name="twitter:image:src" content="">

		{% block head %}
			{% if data.env == 'production' %}
				<link rel="stylesheet" href="/{{ data.portPath }}/css/app.bundle.css?{{ data.timestamp }}">
			{% endif %}
		{% endblock %}
		
	</head>
	<body class="" data-template="base.twig">

		<!--[if lt IE 9]><div class="upgrade"><strong><a href="http://whatbrowser.org/">Your browser is quite old!</strong> Why not upgrade to a different browser to better enjoy this site?</a></div><![endif]-->
		{% include 'views/globals/svg.twig' %}
		{% include 'views/globals/preloader.twig' %}
		{% include 'views/globals/social-channels.twig' %}

		{% include 'views/globals/header.twig' %}
		<main role="main" class="main-content" data-ajax-wrap>
			{% block content %}{% endblock %}
		</main>
		
		{# <main role="main" class="main-content" data-ajax-wrap>
